{
    "compilerOptions": {
      "rootDir": "./",
      "outDir": "build",
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "es2017",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "typeRoots": ["src/types", "node_modules/@types/"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["*"],
        "@configs/*": ["src/configs/*"],
        "@helpers/*": ["src/helpers/*"],
        "@controllers/*": ["src/controllers/*"],
        "@routes/*": ["src/routes/*"],
        "@utils/*": ["src/utils/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@services/*": ["src/services/*"],
        "@dao/*": ["src/dao/*"],
        "@models/*": ["src/models/*"],
        "@validators/*": ["src/validators/*"],
        "@types/*": ["src/types/*"]
      }
    },
    "lib": ["es2015"],
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.cjs", "swc.config.ts"],
    "exclude": ["node_modules", "build", "__tests__", "coverage"],
  }
  